---
import "../styles/global.css";

interface Props {
    title: string;
    description: string;
}

const { title, description } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta name="description" content={description} />
        <meta name="viewport" content="width=device-width" />
        <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
        <meta name="generator" content={Astro.generator} />
        <link
            rel="stylesheet"
            href="https://cdn.jsdelivr.net/npm/katex@0.16.9/dist/katex.min.css"
            integrity="sha384-n8MVd4RsNIU0tAv4ct0nTaAbDJwPJzDEaqSD1odI+WdtXRGWt2kTvGFasHpSy3SV"
            crossorigin="anonymous"
        />
        <!-- Fonts -->
        <link rel="preconnect" href="https://fonts.googleapis.com" />
        <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
        <link
            href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600&family=Merriweather:ital,wght@0,400;0,700;1,400&display=swap"
            rel="stylesheet"
        />
        <title>{title}</title>
    </head>
    <body
        class="bg-[#fdfbf7] text-[#2c2c2c] min-h-screen flex flex-col md:flex-row"
    >
        <!-- Sidebar Navigation -->
        <aside
            class="w-full md:w-64 bg-[#f4f1ea] border-r border-[#e0dad0] p-6 flex-shrink-0 md:h-screen md:sticky md:top-0"
        >
            <div class="mb-8">
                <a
                    href="/"
                    class="text-2xl font-serif font-bold text-gray-900 no-underline hover:no-underline"
                >
                    Ashman Lab
                </a>
                <p class="text-sm text-gray-600 mt-2">
                    Data Science & AI Research
                </p>
            </div>
            <nav class="space-y-4">
                <a
                    href="/"
                    class="block text-gray-700 hover:text-gray-900 font-medium no-underline"
                    >Home</a
                >
                <a
                    href="/blog"
                    class="block text-gray-700 hover:text-gray-900 font-medium no-underline"
                    >Research Log</a
                >
                <a
                    href="/about"
                    class="block text-gray-700 hover:text-gray-900 font-medium no-underline"
                    >About</a
                >
            </nav>
            <div class="mt-auto pt-8 border-t border-[#e0dad0] hidden md:block">
                <p class="text-xs text-gray-500">
                    Â© {new Date().getFullYear()} Andrew Ashman
                </p>
            </div>
        </aside>

        <!-- Main Content -->
        <main class="flex-1 p-6 md:p-12 max-w-4xl mx-auto w-full">
            <slot />
        </main>
    </body>
</html>
